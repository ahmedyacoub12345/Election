@model fstCopy_Proj5.Models.LocalList

@{

    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>إضافة قائمة جديدة</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        body {
            direction: rtl;
            text-align: right;
            background-color: #f8f9fa;
            margin-top: 20px;
        }

        .container {
            margin-top: 20px;
        }

        .page-title {
            font-weight: bold;
            font-size: 28px;
            margin-bottom: 40px;
        }

        .form-section,
        .image-section {
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 5px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 100%;
        }

        .form-section {
            flex: 1;
        }

        .image-section {
            flex: 1;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-group .control-label {
            text-align: right;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            border-radius: 4px;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        }

        .btn-primary {
            background-color: #d9534f;
            border-color: #d43f3a;
            color: #fff;
            border-radius: 4px;
            padding: 10px 20px;
        }

            .btn-primary:hover {
                background-color: #c9302c;
                border-color: #ac2925;
            }

        .image-section img {
            width: 100%;
            height: auto;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-container {
            display: flex;
            gap: 20px;
        }

            .form-container .form-section,
            .form-container .image-section {
                flex: 1;
                max-width: 100%;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="page-title">إضافة قائمة جديدة</h2>
        <div class="form-container">
            <div class="form-section">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label class="control-label col-md-2">اسم القائمة</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ListName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ListName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">رقم القائمة</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">المحافظة</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.Governorate, new SelectList(new List<string> { "إربد", "عجلون" }), "اختر المحافظة", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Governorate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">دائرة الانتخابية</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.ElectionArea, ViewBag.ElectionAreas as SelectList, "اختر منطقة الانتخابات", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ElectionArea, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <input type="submit" value="الانتقال إلى النموذج التالي" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="image-section">
                <img src="~/images/jordan.jpg" alt="Image">
            </div>
        </div>
    </div>
</body>
</html>
